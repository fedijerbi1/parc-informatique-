@model  IEnumerable<Webapp.Models.Equipment>
    @{
    ViewData["Title"] = " gerer equipement";
    }
<h2 class="text-center">Gérer les équipements</h2>  
        <form method="post" asp-action="ListEquip" class="mb-3">
   <div class="container mt-5">
    <div class="card shadow-lg p-4"> 

        <div class="text-end">
            <a class="btn btn-success" asp-action="AjouterEquip"><i class="fas fa-plus"></i> Ajouter</a>
        </div> 
     
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                <th>Numéro de Série Unique</th>
                <th>Type</th>
                <th>Marque</th>
                <th>Modele</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                foreach (var equip in Model)
                {
                    <tr>
                        <td>@equip.NumeroSerie</td>
                        <td>@equip.Type</td>
                        <td>@equip.Marque</td>
                        <td>@equip.Modele</td>
                        <td>
                            <a asp-action="EditEquip" asp-route-id="@equip.Id" class="btn btn-warning btn-sm"><i class="fas fa-edit"></i> Modifier</a>
                            <a asp-action="supprime" asp-route-id="@equip.Id" class="btn btn-danger btn-sm"onclick="return confirm('Êtes-vous sûr de vouloir Supprimer cet équipement?')"><i class="fas fa-trash"></i> Supprimer</a>  
                            <a asp-action="DetailsEquip" asp-route-id="@equip.Id" class="btn btn-info btn-sm"><i class="fas fa-info-circle"></i> Détails</a>

                        </td>
                    </tr>
                }
            }
            else
            {
                <tr><td colspan="5" class="text-center">Aucun équipement disponible.</td></tr>
            }


        
   
        </tbody> 
        </table> 

<a asp-action="index" class="btn btn-success"><i class="fas fa-arrow-left"></i> Retour </a>  

    </form> 
    </div>
    </div>