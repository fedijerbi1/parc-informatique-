

@model Webapp.Models.Affectation 
@{
    ViewData["Title"] = "Affectation";
    var employees = ViewBag.Employees as List<Webapp.Models.Employee> ?? new List<Webapp.Models.Employee>();
    var equipment = ViewBag.Equipment as List<Webapp.Models.Equipment> ?? new List<Webapp.Models.Equipment>();
     var affectations = ViewBag.Affectations as List<Webapp.Models.Affectation> ?? new List<Webapp.Models.Affectation>();

}  
<link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/jquery.dataTables.min.css">

<h2 class="text-center">Affectation d'un Équipement</h2>

@if (TempData["SuccessMessage"] != null)
{
     <script>
            document.addEventListener('DOMContentLoaded', function() {
            var message = @Html.Raw(Json.Serialize(TempData["SuccessMessage"]));

               showSuccessMessage("Équipement(s) affecté(s)", message,3000);
            });
        </script>

    
}

@if (!string.IsNullOrEmpty(ViewBag.ErrorMessage as string))
{
    <div class="alert alert-danger">
        @ViewBag.ErrorMessage
    </div>
} 

@if (User.IsInRole("Admin"))
{


<div class="container">
    <form method="post" asp-action="Affectation">
        @Html.AntiForgeryToken()
        
        <div class="mb-3">
            <h4><label asp-for="EmployeeId" class="form-label">Employé</label></h4>

            <table class="table table-striped table-hover" id="affectationsActuellesTable">
                <thead>
                    <tr>
                        <th>Nom</th>
                        <th>Poste</th>
                        <th>select</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var employee in employees)
                    {
                        <tr>
                            <td>@employee.Prenom @employee.Nom</td>
                            <td>@employee.Poste</td>
                            <td><input type="radio" asp-for="EmployeeId" value="@employee.Id" /></td>
                        </tr>
                    }
                </tbody>
            </table>

            <span asp-validation-for="EmployeeId" class="text-danger"></span>
        </div>
        
        <div class="mb-3">
            <h4><label asp-for="EquipmentId" class="form-label">Équipement</label></h4>
            <table class="table table-striped table-hover" id="affectationsATable">
                <thead>
                        <tr>
                            <th>Numero de serie unique</th> 
                            <th>Type</th> 
                            <th>Marque</th> 
                            <th>select</th>
                        </tr> 
                        </thead> 
                        <tbody>                 
                @foreach (var equip in equipment)
                { 
                    <tr>
                       <td>@equip.NumeroSerie</td>
                    <td>@equip.Type</td>
                    <td>@equip.Marque</td>
                            <td><input type="checkbox" name="EquipmentIds" value="@equip.Id" class="form-check-input" id="equip_@equip.Id" /></td>
                        </tr>
                     
                }
                 </tbody>
                    </table>
            
            <span asp-validation-for="EquipmentId" class="text-danger"></span>
        </div>
        
        <div class="mb-3">
           <h4><label asp-for="DateAffectation" class="form-label">Date d'affectation</label></h4>
            <input asp-for="DateAffectation" type="date" class="form-control" />
            <span asp-validation-for="DateAffectation" class="text-danger"></span>
        </div>
        
        <div class="mb-3">
          <h4><label asp-for="Commentaires" class="form-label">Commentaires (optionnel)</label></h4>
            <textarea asp-for="Commentaires" class="form-control" rows="3" placeholder="Commentaires ou notes sur cette affectation..."></textarea>
        </div>
        
        <div class="d-grid gap-2">
            <button type="submit" class="btn btn-success">Affecter l'équipement</button>
            <a asp-action="Index" class="btn btn-secondary">Annuler</a> 
            <a asp-action="AffectationActuelles" 
   style="display: block; 
          margin-top: 10px; 
          text-align: center; 
          color: #2c7be5; 
          text-decoration: underline; 
          cursor: pointer;">
    Consulter les affectations actuelles
</a>
        </div>
    </form>
</div>}




@section Scripts {
    <partial name="_ValidationScriptsPartial" />
      <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#affectationsActuellesTable').DataTable();
        });
    </script>
    <script>
        $(document).ready(function () {
            $('#affectationsATable').DataTable();
        });
    </script>
}
