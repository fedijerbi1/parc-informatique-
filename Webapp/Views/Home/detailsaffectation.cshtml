@{ 
    ViewData["Title"] = "Détails de l'affectation"; 
}
@model Affectation

<form asp-action="DetailsEmployer" method="get">
    <input type="hidden" asp-for="Id" />
<div class="container mt-5">
    <div class="card shadow-lg p-4">
        <h2 class="text-primary mb-4">Détails de l'affectation </h2>

        <dl class="row">
            <dt class="col-sm-3">Nom</dt>
            <dd class="col-sm-9">@Model.Employee?.Nom</dd>

            <dt class="col-sm-3">Prénom</dt>
            <dd class="col-sm-9">@Model.Employee?.Prenom</dd>

            <dt class="col-sm-3">Email</dt>
            <dd class="col-sm-9">@Model.Employee?.Email</dd>

            <dt class="col-sm-3">Téléphone</dt>
            <dd class="col-sm-9">@Model.Employee?.Telephone</dd>

            <dt class="col-sm-3">Poste</dt>
            <dd class="col-sm-9">@Model.Employee?.Poste</dd>

            <dt class="col-sm-3">Date de Retour </dt>
            <dd class="col-sm-9">
                @(Model.DateRetour?.ToString("dd/MM/yyyy")??"affectation active")
            </dd>

            <dt class="col-sm-3">Équipement</dt>
            <dd class="col-sm-9">@Model.Equipment?.Type - @Model.Equipment?.NumeroSerie</dd>

            <dt class="col-sm-3">Date d'affectation</dt>
            <dd class="col-sm-9">@(Model.DateAffectation.ToString("dd/MM/yyyy")??"Non spécifiée")</dd> 
            <dt class="col-sm-3">commentaire</dt>
            <dd class="col-sm-9">@(Model.Commentaires ??"Aucune commentaire")</dd>

            <dt class="col-sm-3">Statut</dt>
            <dd class="col-sm-9">
              <div class="badge badge-@(Model.IsActif == true ? "success" : "danger")" > <span class=" text-dark">
                    @(Model.IsActif == true ? "Actif" : "Inactif")
                </span></div>
            </dd>
        </dl>


        </div>
    </div>
</div> 
</form> 
