<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Webapp</title>  
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
   <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Webapp.styles.css" asp-append-version="true" /> 
     
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
              <a class="navbar-brand d-flex align-items-center" asp-area="" asp-page="/Index">
     <img src="~/images/logo.jpeg" alt="Logo" style="height: 40px;" class="me-2" /></a> 
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                    <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                        <ul class="navbar-nav flex-grow-1">
                            <li class="nav-item">
                                <a class="nav-link text-dark list-group-item-action" asp-area="" asp-controller="Home" asp-action="Index"><i class="fas fa-home"></i> Accueil</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark list-group-item-action" asp-area="" asp-controller="Home" asp-action="Equipement"><i class="fas fa-laptop"></i> Équipements</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark list-group-item-action" asp-area="" asp-controller="Home" asp-action="Affectation"><i class="fas fa-exchange-alt"></i> Affectations</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark list-group-item-action" asp-area="" asp-controller="Home" asp-action="Employer"><i class="fas fa-user"></i> Employés</a>
                            </li> 
                             <li class="nav-item">
                                <a class="nav-link text-dark list-group-item-action" asp-area="" asp-controller="Home" asp-action="Dashboard"><i class="fas fa-dashboard"></i> Dashboard</a>
                            </li>
                        </ul>
                        
                        <ul class="navbar-nav">
                            @if (User.Identity.IsAuthenticated)
                            {
                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle text-dark list-group-item-action" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown">
                                        <i class="fas fa-user"></i> @User.Identity.Name
                                    </a>
                                    <ul class="dropdown-menu">
                                        <li><a class="dropdown-item" asp-controller="Account" asp-action="Profile"><i class="fas fa-user-cog"></i> Profil</a></li>
                                        <li><hr class="dropdown-divider"></li>
                                        <li>
                                            <form method="post" asp-controller="Account" asp-action="Logout" style="display: inline;">
                                                @Html.AntiForgeryToken()
                                                <button type="submit" class="dropdown-item">
                                                    <i class="fas fa-sign-out-alt"></i> Déconnexion
                                                </button>
                                            </form>
                                        </li>
                                    </ul>
                                </li>
                            }
                            else
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-controller="Account" asp-action="Login"><i class="fas fa-sign-in-alt"></i> Connexion</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-controller="Account" asp-action="Register"><i class="fas fa-user-plus"></i> Inscription</a>
                                </li>
                            }
                        </ul>
                    </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - Webapp - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer> 
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
